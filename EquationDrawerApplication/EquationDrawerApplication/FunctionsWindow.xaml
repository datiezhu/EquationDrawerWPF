<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquationDrawerApplication"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="EquationDrawerApplication.PreferencesWindow"
        mc:Ignorable="d"
        Title="Funciones" Height="450" Width="800" Background="#FF181818">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="Nombre: " />
            <TextBox  Text="Nombre" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Color: " />
            <xctk:ColorPicker Width="100" Background="#FF3D3D3D"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal"/>
    </StackPanel>

</Window>
